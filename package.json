{
  "name": "alias-manager",
  "displayName": "Alias Manager",
  "description": "A tool used to manage your system aliases",
  "icon": "resources/logo.png",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.74.3"
  },
  "publisher": "chouchouji",
  "categories": [
    "Other"
  ],
  "author": {
    "name": "chouchouji",
    "email": "1305974212@qq.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chouchouji/alias-manager.git"
  },
  "bugs": {
    "url": "https://github.com/chouchouji/alias-manager/issues"
  },
  "keywords": [
    "extension",
    "alias",
    "manage"
  ],
  "homepage": "https://github.com/chouchouji/alias-manager",
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Alias Manager",
      "properties": {
        "alias-manager.defaultStorePath": {
          "type": "string",
          "description": "The path used to store aliases, default value is ${homedir}/.zshrc"
        }
      }
    },
    "commands": [
      {
        "command": "aliasView.refresh",
        "title": "Refresh Aliases",
        "icon": "$(refresh)"
      },
      {
        "command": "aliasView.add",
        "title": "Add Alias",
        "icon": "$(add)"
      },
      {
        "command": "aliasView.delete",
        "title": "Delete Alias"
      },
      {
        "command": "aliasView.run",
        "title": "Run",
        "icon": "$(run)"
      },
      {
        "command": "aliasView.rename",
        "title": "Rename Alias"
      }
    ],
    "commandPalette": [
      {
        "command": "aliasView.refresh",
        "when": "true"
      },
      {
        "command": "aliasView.add",
        "when": "true"
      },
      {
        "command": "aliasView.delete",
        "when": "false"
      },
      {
        "command": "aliasView.rename",
        "when": "false"
      },
      {
        "command": "aliasView.run",
        "when": "false"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aliasView.refresh",
          "when": "view == aliasView",
          "group": "navigation"
        },
        {
          "command": "aliasView.add",
          "when": "view == aliasView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aliasView.delete",
          "when": "view == aliasView"
        },
        {
          "command": "aliasView.run",
          "when": "view == aliasView && viewItem == alias_child",
          "group": "inline"
        },
        {
          "command": "aliasView.rename",
          "when": "view == aliasView && viewItem == alias_child"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aliasManager",
          "title": "Alias Manager",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "aliasManager": [
        {
          "id": "aliasView",
          "name": "Alias View"
        }
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged --allow-empty"
  },
  "nano-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@9.1.1",
  "scripts": {
    "postinstall": "simple-git-hooks",
    "package": "pnpm vsce package --no-dependencies",
    "release": "vr release --skip-npm-publish",
    "lint": "eslint src --fix",
    "format": "prettier . --write",
    "dev": "tsup --watch",
    "build": "tsup"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.3",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@varlet/release": "^0.3.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.13.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "ts-loader": "^9.5.1",
    "tsup": "8.3.5",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "rattail": "^1.0.0"
  }
}