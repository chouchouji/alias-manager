{
  "name": "alias-manager",
  "displayName": "Alias Manager",
  "description": "A tool used to manage your system aliases",
  "icon": "resources/logo.png",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chouchouji/alias-manager.git"
  },
  "homepage": "https://github.com/chouchouji/alias-manager",
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Alias Manager",
      "properties": {
        "alias-manager.defaultStorePath": {
          "type": "string",
          "description": "The path used to store aliases, default value is ${homedir}/.zshrc"
        }
      }
    },
    "commands": [
      {
        "command": "aliasView.refresh",
        "title": "Refresh Aliases",
        "icon": "$(refresh)"
      },
      {
        "command": "aliasView.add",
        "title": "Add Alias",
        "icon": "$(add)"
      },
      {
        "command": "aliasView.delete",
        "title": "Delete Alias"
      },
      {
        "command": "aliasView.run",
        "title": "Run",
        "icon": "$(run)"
      }
    ],
    "commandPalette": [
      {
        "command": "aliasView.refresh",
        "when": "true"
      },
      {
        "command": "aliasView.add",
        "when": "true"
      },
      {
        "command": "aliasView.delete",
        "when": "false"
      },
      {
        "command": "aliasView.run",
        "when": "false"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aliasView.refresh",
          "when": "view == aliasView",
          "group": "navigation"
        },
        {
          "command": "aliasView.add",
          "when": "view == aliasView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aliasView.delete",
          "when": "view == aliasView"
        },
        {
          "command": "aliasView.run",
          "when": "view == aliasView && viewItem == alias_child",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aliasManager",
          "title": "Alias Manager",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "aliasManager": [
        {
          "id": "aliasView",
          "name": "Alias View"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "format": "prettier . --write",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}